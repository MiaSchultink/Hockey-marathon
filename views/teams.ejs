        <button class="btn details" type ="submit">Join team</button>
        <input type ="hidden" name ="_csrf" value= '<%=csrfToken%>'> 
     </form>

     <form name = "leave-team" action ="/game/teams/leave" method  = "post">
        <input name = "teamId" type = "hidden" value =<%=teams[i]._id%>>
        <button class="btn details" type ="submit">Leave team</button>
        <input type ="hidden" name ="_csrf" value= '<%=csrfToken%>'> 
     </form>
</div>
